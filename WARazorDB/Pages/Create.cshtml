@page
@model WARazorDB.Pages.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">
                        <i class="fas fa-plus-circle me-2"></i>Crear Nueva Tarea
                    </h2>
                </div>
                <div class="card-body p-4">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row">
                            <div class="col-md-8">
                                <div class="form-group mb-3">
                                    <label asp-for="Tarea.nombreTarea" class="form-label fw-bold"></label>
                                    <input asp-for="Tarea.nombreTarea" class="form-control form-control-lg" placeholder="Ingrese el nombre de la tarea..." />
                                    <span asp-validation-for="Tarea.nombreTarea" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="Tarea.idUsuario" class="form-label fw-bold"></label>
                                    <input asp-for="Tarea.idUsuario" class="form-control form-control-lg" type="number" min="1" />
                                    <span asp-validation-for="Tarea.idUsuario" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Tarea.fechaVencimiento" class="form-label fw-bold"></label>
                                    <input asp-for="Tarea.fechaVencimiento" class="form-control form-control-lg" type="date" />
                                    <span asp-validation-for="Tarea.fechaVencimiento" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Tarea.estado" class="form-label fw-bold"></label>
                                    <input asp-for="Tarea.estado" class="form-control form-control-lg" value="Pendiente" readonly />
                                    <div class="form-text">Las nuevas tareas siempre comienzan como "Pendiente"</div>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-page="Index" class="btn btn-secondary btn-lg me-md-2">
                                <i class="fas fa-arrow-left me-1"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save me-1"></i>Crear Tarea
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
