@page
@model WARazorDB.Pages.DeleteModel

@{
    ViewData["Title"] = "Eliminar Tarea";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 delete-card">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>Confirmar Eliminación
                    </h2>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-warning border-0 mb-4" role="alert">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-exclamation-circle fa-2x me-3 text-warning"></i>
                            <div>
                                <h5 class="alert-heading mb-1">¿Está seguro que desea eliminar esta tarea?</h5>
                                <p class="mb-0">Esta acción no se puede deshacer. La tarea será eliminada permanentemente.</p>
                            </div>
                        </div>
                    </div>

                    <div class="details-container delete-preview">
                        <h5 class="text-muted mb-3">
                            <i class="fas fa-eye me-2"></i>Vista previa de la tarea a eliminar:
                        </h5>

                        <div class="detail-item mb-4">
                            <label class="detail-label">
                                <i class="fas fa-tag me-2 text-primary"></i>
                                @Html.DisplayNameFor(model => model.Tarea.nombreTarea)
                            </label>
                            <div class="detail-value">
                                <strong>@Html.DisplayFor(model => model.Tarea.nombreTarea)</strong>
                            </div>
                        </div>

                        <div class="detail-item mb-4">
                            <label class="detail-label">
                                <i class="fas fa-calendar me-2 text-warning"></i>
                                @Html.DisplayNameFor(model => model.Tarea.fechaVencimiento)
                            </label>
                            <div class="detail-value">
                                <span class="date-badge-large">
                                    @Html.DisplayFor(model => model.Tarea.fechaVencimiento)
                                </span>
                            </div>
                        </div>

                        <div class="detail-item mb-4">
                            <label class="detail-label">
                                <i class="fas fa-flag me-2 text-success"></i>
                                @Html.DisplayNameFor(model => model.Tarea.estado)
                            </label>
                            <div class="detail-value">
                                @{
                                    string badgeClass = Model.Tarea.estado switch
                                    {
                                        "Pendiente" => "status-badge status-pending",
                                        "En Curso" => "status-badge status-progress",
                                        "Finalizado" => "status-badge status-completed",
                                        "Cancelado" => "status-badge status-cancelled",
                                        _ => "status-badge status-default"
                                    };
                                }
                                <span class="@badgeClass">
                                    <i class="fas fa-circle me-1"></i>
                                    @Html.DisplayFor(model => model.Tarea.estado)
                                </span>
                            </div>
                        </div>

                        <div class="detail-item mb-4">
                            <label class="detail-label">
                                <i class="fas fa-user me-2 text-info"></i>
                                @Html.DisplayNameFor(model => model.Tarea.idUsuario)
                            </label>
                            <div class="detail-value">
                                <span class="user-badge-large">
                                    Usuario #@Html.DisplayFor(model => model.Tarea.idUsuario)
                                </span>
                            </div>
                        </div>
                    </div>

                    <form method="post" class="mt-4">
                        <input type="hidden" asp-for="Tarea.Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-page="./Index" class="btn btn-secondary btn-lg me-md-2">
                                <i class="fas fa-times me-1"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg delete-confirm-btn">
                                <i class="fas fa-trash me-1"></i>Confirmar Eliminación
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
