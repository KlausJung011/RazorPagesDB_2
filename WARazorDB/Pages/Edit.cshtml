@page
@model WARazorDB.Pages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-warning text-dark">
                    <h2 class="mb-0">
                        <i class="fas fa-edit me-2"></i>Editar Tarea
                    </h2>
                </div>
                <div class="card-body p-4">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="Tarea.Id" />

                        <div class="row">
                            <div class="col-md-8">
                                <div class="form-group mb-3">
                                    <label asp-for="Tarea.nombreTarea" class="form-label fw-bold"></label>
                                    <input asp-for="Tarea.nombreTarea" class="form-control form-control-lg" placeholder="Ingrese el nombre de la tarea..." />
                                    <span asp-validation-for="Tarea.nombreTarea" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="Tarea.idUsuario" class="form-label fw-bold"></label>
                                    <input asp-for="Tarea.idUsuario" class="form-control form-control-lg" type="number" min="1" />
                                    <span asp-validation-for="Tarea.idUsuario" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Tarea.fechaVencimiento" class="form-label fw-bold"></label>
                                    <input asp-for="Tarea.fechaVencimiento" class="form-control form-control-lg" type="date" />
                                    <span asp-validation-for="Tarea.fechaVencimiento" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Tarea.estado" class="form-label fw-bold"></label>
                                    <select asp-for="Tarea.estado" asp-items="Model.EstadosList" class="form-select form-select-lg">
                                        <option value="">-- Seleccione un estado --</option>
                                    </select>
                                    <span asp-validation-for="Tarea.estado" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-page="./Index" class="btn btn-secondary btn-lg me-md-2">
                                <i class="fas fa-arrow-left me-1"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="fas fa-save me-1"></i>Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
